
<VirtualHost *:80>
  ServerName uk.infoplease.com
  ServerAlias dev.uk.infoplease.com zip.uk.infoplease.com d2.uk.infoplease.com

  SetEnvIfNoCase Host "(uk)\.(infoplease\.com)$" VARIANT=$1 TLD=$2 TEMPLATE_DIR=www.infoplease.com
  SetEnvIfNoCase Host "^([^.]*\.)uk\.infoplease\.com$" SERVER=$1
  SetEnvIfNoCase Host "^zip\." TEMPLATE_DIR=zip.infoplease.com

  php_value auto_prepend_file "/site/cfg/prepend-refsites.php"

  DocumentRoot /site/html/uk/

  RewriteEngine on
  RewriteRule ^/(sitemap[0-9]*\.xml)$ /sitemaps/%{SERVER_NAME}/$1 [PT]
  RewriteRule ^/sports/([^/]+)/([^.]+).html$ /sports/index.html?sport=$1&championship=$2 [L,PT]
  RewriteRule ^/sports/([^.]+).html$ /sports/index.html?sport=$1&championship=$1 [L,PT]

  RewriteRule ^/(biography|entertainment|quizzes)(/index.html)?$ /$1/ [R=301,L]
  RewriteRule  ^/biography/$     /site/html/main/people.html     [L]
  RewriteRule ^/entertainment/$ /site/html/main/ent.html        [L]
  RewriteRule ^/quizzes/$       /site/html/quizzes/index.html   [L]
  RewriteRule ^/world.html$       /site/html/main/world.html   [L]

  RewriteRule ^/(images/.*) http://i.infopls.com/$1 [R=301,L]

  Alias /applets/ /site/html/applets/
  Alias /dart/ /site/html/dart/
  Alias /css/ /site/html/css/
  Alias /js/ /site/html/js/
  Alias /sitemaps/ /site/html/sitemaps/
  Alias /ads/ /site/html/ads/
  Alias / /site/html/uk/

  RewriteRule /robots.txt /site/html/applets/robots.php [L]
  RewriteRule ^/favicon.ico /site/images/icons/favicon.ico [L]
  RewriteRule ^/ipka/?$ http://www.factmonster.com/almanacs.html [R=301,L]
  RewriteRule ^/ipka(/.+)$ http://www.factmonster.com/ipka$1 [R=301,L]
</VirtualHost>
