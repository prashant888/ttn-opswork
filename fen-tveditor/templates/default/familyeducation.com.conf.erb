<VirtualHost *:80>
  ServerName <%= @params[:name] %>
  <% if @params[:server_aliases] -%>
  ServerAlias <%= @params[:server_aliases].join " " %>
  <% end -%> 
  UseCanonicalName on

  DocumentRoot <%= @params[:docroot] %>
  <Directory <%= @params[:docroot] %>>
      Options FollowSymLinks
      Require all granted
  </Directory>

  SetEnvIfNoCase Host "familyeducation.com$" TEMPLATE_DIR=<%= @params[:name] %>

  RewriteEngine on
  RewriteOptions inherit

  RewriteRule ^/(css|images|img|js)/(.*) http://<%= @params[:image_host] %>/$1/$2 [R=301,L]

  Include "famed-common.conf"

  # Related to home page move from old platform
  RewriteRule ^/sitemap.html /famed/sitemap.html [skip=1,PT]
  #  RewriteRule ^(/home/) /famed/index.html [PT]
  RewriteRule ^/home/?$ http://%{HTTP_HOST}/ [R=301,L]
  RewriteRule ^(/article) /famed/index.html [skip=1,PT]
  RewriteRule ^(/email) http://newsletters.familyeducation.com [R=301,L]
</VirtualHost>