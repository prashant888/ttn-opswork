<VirtualHost *:80>
  ServerName <%= @params[:name] %>
  <% if @params[:server_aliases] -%>
  ServerAlias <%= @params[:server_aliases].join " " %>
  <% end -%> 

  UseCanonicalName on

  DocumentRoot <%= @params[:docroot] %>/namelab
  <Directory <%= @params[:docroot] %>>
      Options FollowSymLinks
      Require all granted
  </Directory>
  Alias / <%= @params[:docroot] %>/namelab/

  SetEnvIfNoCase Host "familyeducation.com$" TEMPLATE_DIR=<%= @params[:name] %>

  RewriteEngine on
  RewriteOptions inherit

  RewriteRule ^/(css|images|img|js)/(.*) http://<%= @params[:image_host] %>/$1/$2 [R=301,L]

  Include "namelab-common.conf"

  ProxyRequests Off

  ProxyStatus On

#  ProxyPass /servlet2/ balancer://appsrv2/namelab/servlet/ lbmethod=bybusyness
#  ProxyPass /servlet2/ http://ip-10-0-6-117.ec2.internal:8080/namelab/servlet/

</VirtualHost>
