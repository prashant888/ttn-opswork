<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true"/>
        <param name="file" value="<%= node.graylog2[:radio][:log_file] %>"/>
        <param name="MaxFileSize" value="<%= node.graylog2[:radio][:log_max_size] %>"/>
        <param name="MaxBackupIndex" value="<%= node.graylog2[:radio][:log_max_index] %>"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="<%= node.graylog2[:radio][:log_pattern] %>"/>
        </layout>
    </appender>

    <!-- Application Loggers -->
    <logger name="org.graylog2">
        <level value="<%= node.graylog2[:radio][:log_level_application] %>"/>
    </logger>
    <!-- this emits a harmless warning for ActiveDirectory every time which we can't work around :( -->
    <logger name="org.apache.directory.api.ldap.model.message.BindRequestImpl">
        <level value="<%= node.graylog2[:radio][:log_level_ldap] %>"/>
    </logger>
    <!-- Root Logger -->
    <root>
        <priority value="<%= node.graylog2[:radio][:log_level_root] %>"/>
        <appender-ref ref="fileAppender"/>
    </root>

</log4j:configuration>
