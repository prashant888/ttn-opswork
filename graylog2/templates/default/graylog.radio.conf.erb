<%= config_option 'kafka_batch_size',        node.graylog2[:radio][:kafka][:batch_size] -%>
<%= config_option 'kafka_batch_max_wait_ms', node.graylog2[:radio][:kafka][:batch_max_wait_ms] -%>
<%= config_option 'kafka_required_acks',     node.graylog2[:radio][:kafka][:required_acks] -%>

# Processors
<%= config_option 'processbuffer_processors', node.graylog2[:radio][:processbuffer_processors] -%>
<%= config_option 'processor_wait_strategy',  node.graylog2[:radio][:processor_wait_strategy] -%>
<%= config_option 'ring_size',                node.graylog2[:radio][:ring_size] -%>

