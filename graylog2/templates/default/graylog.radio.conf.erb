# General settings
<%= config_option 'node_id_file',        node.graylog2[:radio][:node_id_file] -%>
<%= config_option 'transport_type',      node.graylog2[:radio][:transport_type] -%>
<%= config_option 'graylog2_server_uri', @radio_server_uri -%>
<%= config_option 'rest_listen_uri',     @radio_rest_listen_uri -%>
<%= config_option 'rest_transport_uri',  node.graylog2[:radio][:rest][:transport_uri] -%>

# AMQP
<%= config_option 'amqp_broker_hostname', node.graylog2[:radio][:amqp][:broker_hostname] -%>
<%= config_option 'amqp_broker_port',     node.graylog2[:radio][:amqp][:broker_port] -%>
<%= config_option 'amqp_broker_vhost',    node.graylog2[:radio][:amqp][:broker_vhost] -%>
<%= config_option 'amqp_broker_username', node.graylog2[:radio][:amqp][:broker_username] -%>
<%= config_option 'amqp_broker_password', node.graylog2[:radio][:amqp][:broker_password] -%>

# Kafka
<%= config_option 'kafka_brokers',           node.graylog2[:radio][:kafka][:brokers] -%>
